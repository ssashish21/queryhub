<%- include("../partials/header") %>
<div class="container text-center">
    <h1>Respond to <%= blog.name %></h1>
<form action="/blogs/<%= blog._id%>/comments" method="POST" style="width:30%; margin: 20px auto;">
    <div class="form-group">
        <input class="form-control" type="text" name="comment[text]" placeholder="type here">
    </div>
    <div class="form-group">
        <button class="form-control btn-primary" style="display:block;">Submit</button>
    </div>
</form>
<a class=" btn-primary btn" href="/blogs/<%= blog._id%>">Go Back</a>
</div>
