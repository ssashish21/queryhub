<%- include("../partials/header") %>
<div class="container text-center">
    <h1>Edit <%= blog.name %></h1>
<form action="/blogs/<%= blog._id %>?_method=PUT" method="POST" style="width:30%; margin: 20px auto;">
    <div class="form-group">
        <input class="form-control" type="text" name="blog[name]" value="<%=blog.name %>" required>
    </div>
    <div class="form-group">
        <input class="form-control" type="text" name="blog[description]" value="<%=blog.description %>"">
    </div>
    <div class="form-group">
        <button class="form-control btn-primary" style="display:block;">Submit</button>
    </div>
</form>
<a href="/blogs/<%= blog._id %>">Go Back</a>
</div>
<%- include("../partials/footer") %>